<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:context=".application.agenda.AddEventFragment">

    <android.support.design.widget.TextInputLayout
            android:id="@+id/til_add_event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/til_add_event_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/hint_name">
        <android.support.design.widget.TextInputEditText
                android:id="@+id/et_add_event_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/til_add_event_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/til_add_event_name"
            app:layout_constraintBottom_toTopOf="@id/til_add_event_pacient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/hint_location">
        <android.support.design.widget.TextInputEditText
                android:id="@+id/et_add_event_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/til_add_event_pacient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/til_add_event_location"
            app:layout_constraintBottom_toTopOf="@id/til_add_event_doctor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/hint_location">
        <android.support.design.widget.TextInputEditText
                android:id="@+id/et_add_event_pacient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/til_add_event_doctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/til_add_event_pacient"
            app:layout_constraintBottom_toTopOf="@id/btn_submit_event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/hint_location">
        <android.support.design.widget.TextInputEditText
                android:id="@+id/et_add_event_doctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/btn_submit_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_submit"
            app:layout_constraintTop_toBottomOf="@id/til_add_event_doctor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>