<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".application.settings.SettingsActivity"
        android:background="@color/white">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tg_btn_notifications"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/text_settings_title"
            android:fontFamily="@font/aller_bdit"
            android:textSize="30sp"
            android:textColor="@color/accent_material_light"

    />

    <Switch
            android:text="@string/text_settings"
            android:textColor="@color/accent_material_light"
            android:textSize="20sp"
            android:fontFamily="@font/aller_bdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tg_btn_notifications"
            app:layout_constraintTop_toBottomOf="@id/tv_settings"
            app:layout_constraintBottom_toTopOf="@id/btn_terms_conditions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_terms_conditions"
            android:background="@drawable/rounded_button"
            android:text="Go to terms and conditions"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/aller_bdit"
            app:layout_constraintTop_toBottomOf="@id/tg_btn_notifications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>